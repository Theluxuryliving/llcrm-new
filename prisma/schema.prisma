generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DIRECTOR
  MANAGER
  AGENT
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String // hashed password
  name     String?
  role     Role

  leads     Lead[]     @relation("UserLeads")
  followUps FollowUp[]
}

model Lead {
  id           String   @id @default(uuid())
  name         String
  phone        String
  email        String?
  city         String?
  country      String?
  area         String?
  plan         String?
  property     String?
  project      String?
  budget       Int?
  purchasePlan String?
  source       String?
  inventory    String?
  createdAt    DateTime @default(now())

  createdById String
  createdBy   User   @relation("UserLeads", fields: [createdById], references: [id])

  followUps FollowUp[]
}

model FollowUp {
  id            String   @id @default(cuid())
  note          String
  nextFollowup  Date
  lead          Lead     @relation(fields: [leadId], references: [id])
  leadId        String
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  createdAt     Date     @default(now())
}
